<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GamarraPlus</title>

    <link rel="stylesheet" href="~/css/bootsWatch.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GamarraPlus.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/landing-page.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <!--
       - google font link
     -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@300;400;500;600;700&family=Roboto:wght@400;500;700&display=swap"
          rel="stylesheet">

    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.1/themes/base/jquery-ui.css">



    @await RenderSectionAsync("Styles", required: false)
</head>
<body id="top">
    <header class="header" data-header>
        <div class="container">
            <div class="overlay" data-overlay></div>
            <a href="#" class="logo_gamarra">
                <img src="~/imagenes/logo.png" width="160" height="50" alt="GamarraPlus logo">
            </a>
            <button class="nav-open-btn" data-nav-open-btn aria-label="Open Menu">
                <ion-icon name="menu-outline"></ion-icon>
            </button>
            <nav class="navbar" data-navbar>
                <button class="nav-close-btn" data-nav-close-btn aria-label="Close Menu">
                    <ion-icon name="close-outline"></ion-icon>
                </button>
                <a href="#" class="logo">
                    <img src="~/imagenes/logo.png" width="190" height="50" alt="Footcap logo">
                </a>
                <ul class="navbar-list">

                    <li class="navbar-item">
                        <a class="navbar-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    <li class="navbar-item">
                        <a class="navbar-link" asp-controller="Home" asp-action="Inicio">Detalle</a>
                    </li>

                    <li class="navbar-item">
                        <a class="navbar-link" asp-controller="Usuario" asp-action="Usuarios">Usuarios</a>
                    </li>

                    <li class="navbar-item dropdown">
                        <a class="navbar-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Reportes</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item text-white" asp-controller="Reporte" asp-action="Ventas">Ventas</a>
                        </div>
                    </li>
                    <li class="navbar-item dropdown">
                        <a class="navbar-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Ventas</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item text-white" asp-controller="Home" asp-action="CrearVenta">Crear Nuevo</a>
                            <a class="dropdown-item text-white" asp-controller="Home" asp-action="DetalleVenta">Ver Detalle</a>
                        </div>
                    </li>

                    <li class="navbar-item dropdown">
                        <a class="navbar-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Inventario</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item text-white" asp-controller="Inventario" asp-action="Productos">Productos</a>
                            <a class="dropdown-item text-white" asp-controller="Inventario" asp-action="Categorias">Categorias</a>
                        </div>
                    </li>



                </ul>

                <ul class="nav-action-list">

                    <li>
                        <button class="nav-action-btn">
                            <ion-icon name="search-outline" aria-hidden="true"></ion-icon>

                            <span class="nav-action-text">Search</span>
                        </button>
                    </li>

                    <li>
                        <button class="nav-action-btn">
                            <ion-icon name="heart-outline" aria-hidden="true"></ion-icon>

                            <span class="nav-action-text">Wishlist</span>

                            <data class="nav-action-badge" value="5" aria-hidden="true">5</data>
                        </button>
                    </li>

                    <li>
                        <button class="nav-action-btn">
                            <ion-icon name="bag-outline" aria-hidden="true"></ion-icon>

                            <data class="nav-action-text" value="318.00">Basket: <strong>S/.318.00</strong></data>

                            <data class="nav-action-badge" value="4" aria-hidden="true">4</data>
                        </button>
                    </li>

                    <li class="nav-action-btn">
                        <a class="btn btn-danger" asp-controller="Acceso" asp-action="Salir"><i class="bi bi-box-arrow-right"></i> Salir</a>
                    </li>

                </ul>

            </nav>
        </div>

    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="footer">

        <div class="footer-top section">
            <div class="container">

                <div class="footer-brand">

                    <a href="#" style="font-size: 4rem; color:#000;">
                        Gamarra+
                    </a>

                    <ul class="social-list">

                        <li>
                            <a href="#" class="social-link">
                                <ion-icon name="logo-facebook"></ion-icon>
                            </a>
                        </li>

                        <li>
                            <a href="#" class="social-link">
                                <ion-icon name="logo-twitter"></ion-icon>
                            </a>
                        </li>

                        <li>
                            <a href="#" class="social-link">
                                <ion-icon name="logo-pinterest"></ion-icon>
                            </a>
                        </li>

                        <li>
                            <a href="#" class="social-link">
                                <ion-icon name="logo-linkedin"></ion-icon>
                            </a>
                        </li>

                    </ul>

                </div>

                <div class="footer-link-box">

                    <ul class="footer-list">

                        <li>
                            <p class="footer-list-title">Contacto</p>
                        </li>

                        <li>
                            <address class="footer-link">
                                <ion-icon name="location"></ion-icon>

                                <span class="footer-link-text">
                                    Gamarra
                                </span>
                            </address>
                        </li>

                        <li>
                            <a href="tel:+557343673257" class="footer-link">
                                <ion-icon name="call"></ion-icon>

                                <span class="footer-link-text">+517343673257</span>
                            </a>
                        </li>

                        <li>
                            <a href="mailto:footcap@help.com" class="footer-link">
                                <ion-icon name="mail"></ion-icon>

                                <span class="footer-link-text">gamarraplus@help.com</span>
                            </a>
                        </li>

                    </ul>

                    <ul class="footer-list">

                        <li>
                            <p class="footer-list-title">Mi cuenta</p>
                        </li>

                        <li>
                            <a href="#" class="footer-link">
                                <ion-icon name="chevron-forward-outline"></ion-icon>

                                <span class="footer-link-text">Mi cuenta</span>
                            </a>
                        </li>

                        <li>
                            <a href="#" class="footer-link">
                                <ion-icon name="chevron-forward-outline"></ion-icon>

                                <span class="footer-link-text">Ver carrito</span>
                            </a>
                        </li>

                        <li>
                            <a href="#" class="footer-link">
                                <ion-icon name="chevron-forward-outline"></ion-icon>

                                <span class="footer-link-text">Lista de deseos</span>
                            </a>
                        </li>

                        <li>
                            <a href="#" class="footer-link">
                                <ion-icon name="chevron-forward-outline"></ion-icon>

                                <span class="footer-link-text">Comparar</span>
                            </a>
                        </li>

                        <li>
                            <a href="#" class="footer-link">
                                <ion-icon name="chevron-forward-outline"></ion-icon>

                                <span class="footer-link-text">Nuevos productos</span>
                            </a>
                        </li>

                    </ul>

                    <div class="footer-list">

                        <p class="footer-list-title">Tiempo de apertura</p>

                        <table class="footer-table">
                            <tbody>

                                <tr class="table-row">
                                    <th class="table-head" scope="row">Lun - Sab:</th>

                                    <td class="table-data">07AM - 10PM</td>
                                </tr>

                                <tr class="table-row">
                                    <th class="table-head" scope="row">Mier:</th>

                                    <td class="table-data">07AM - 10PM</td>
                                </tr>

                                <tr class="table-row">
                                    <th class="table-head" scope="row">Vier:</th>

                                    <td class="table-data">07AM - 10PM</td>
                                </tr>

                                <tr class="table-row">
                                    <th class="table-head" scope="row">Sab:</th>

                                    <td class="table-data">07AM - 10PM</td>
                                </tr>

                                <tr class="table-row">
                                    <th class="table-head" scope="row">Dom:</th>

                                    <td class="table-data">07AM - 07PM</td>
                                </tr>

                            </tbody>
                        </table>

                    </div>

                    <div class="footer-list">

                        <p class="footer-list-title">Correo</p>

                        <p class="newsletter-text">
                            Lunes a Viernes de 7AM a 5PM
                        </p>

                        <form action="" class="newsletter-form">
                            <input type="email" name="email" required placeholder="Correo electrónico" class="newsletter-input">

                            <button type="submit" class="btn btn-primary">Escribir</button>
                        </form>

                    </div>

                </div>

            </div>
        </div>

        <div class="footer-bottom">
            <div class="container">

                <p class="copyright">
                    &copy; 2024 <a class="copyright-link" asp-area="" asp-controller="Home" asp-action="Privacy">Gamarra+</a> Todos los derechos reservados
                </p>

            </div>
        </div>

    </footer>

    <script src="~/js/script.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
